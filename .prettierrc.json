{
  "printWidth": 160,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.css", "*.scss", "*.sass"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["tsconfig.json", "tsconfig.*.json"],
      "options": {
        "parser": "jsonc"
      }
    },
    {
      "files": ["*.wxml"],
      "options": {
        "parser": "html",
        "semi": true,
        "singleQuote": false
      }
    },
    {
      "files": ["*.wxss"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
